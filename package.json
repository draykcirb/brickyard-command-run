{
  "name": "brickyard-command-run",
  "version": "0.0.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint *.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "e-cloud",
  "license": "ISC",
  "devDependencies": {
    "conventional-changelog": "^1.1.0",
    "eslint": "^3.0.0",
    "eslint-config-airbnb-base": "^4.0.0",
    "eslint-plugin-import": "^1.5.0",
    "ghooks": "^1.2.1",
    "validate-commit-msg": "^2.6.1"
  },
  "dependencies": {
    "express": "^4.0.0",
    "http-proxy-middleware": "^0.17.0",
    "lodash": "^4.6.1",
    "log4js": "^0.6.33",
    "morgan": "^1.7.0",
    "opn": "^4.0.0"
  },
  "peerDependencies": {
    "brickyard3": "~1.0.0"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "example",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    },
    "ghooks": {
      "//": {
        "pre-commit": "check code style",
        "post-checkout": "npm install"
      },
      "commit-msg": "validate-commit-msg",
      "post-rewrite": "npm install",
      "post-merge": "npm install"
    }
  }
}
